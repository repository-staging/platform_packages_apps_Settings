<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res-auto"
    android:title="@string/private_space_ext_configure_user"
    settings:searchable="false" >

    <Preference
        android:key="clipboard_access"
        android:title="@string/clipboard_access_title"
        settings:controller="com.android.settings.privatespace.users.PrivateSpaceClipboardAccessPrefController"
        settings:fragment="com.android.settings.privatespace.users.PrivateSpaceClipboardAccessSettings"
        settings:searchable="false" />

    <Preference
        android:key="private_space_ext_app_install"
        android:title="@string/user_app_install"
        settings:controller="com.android.settings.privatespace.users.PrivateSpaceAppInstallRestrictionPrefController"
        settings:searchable="false" />

    <Preference
        android:key="private_space_ext_app_copying"
        android:title="@string/user_copy_apps_menu_title"
        settings:controller="com.android.settings.privatespace.users.PrivateSpaceAppCopyPrefController"
        settings:fragment="com.android.settings.users.AppCopyFragment"
        settings:searchable="false" />
</PreferenceScreen>
